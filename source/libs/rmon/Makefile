RMONLIB_DIR = $(SDIR)/libs/rmon

RMONLIB = librmon$(LIBEXT)

RMONLIB_SRC = \
              rmon_macros.c \
              rmon_monitoring_level.c

RMONLIB_OBJS = $(RMONLIB_SRC:.c=.o)

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
rmonlib: $(RMONLIB)

rmonlib_clean:
	$(RM) $(RMONLIB_OBJS) librmon.a liblck$(SHAREDEXT)

rmonlib_depend:
	$(DEPEND) -f$(RMONLIB_DIR)/rmon_dependencies $(RMONLIB_DIR)/*.c

rmonlib_messages:
	@echo Creating $@
	@for i in `ls $(RMONLIB_DIR)/*.c`; do \
	   $(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ;\
	done

###############################################################################
# rules to build library
###############################################################################
librmon.a:	$(RMONLIB_OBJS) 
	$(AR) $(ARFLAGS) librmon.a $(RMONLIB_OBJS)
	$(RANLIB) librmon.a

librmon$(SHAREDEXT): $(RMONLIB_OBJS)
	$(SHAREDLD) $(SHARED_LFLAGS) -o librmon$(SHAREDEXT) $(RMONLIB_OBJS) $(LIBS) -lc

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(RMONLIB_DIR)/rmon_dependencies

###############################################################################
# rules to build object codes
###############################################################################
rmon_macros.o:	$(RMONLIB_DIR)/rmon_macros.c
	$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(RMONLIB_DIR)/rmon_macros.c

rmon_monitoring_level.o:	$(RMONLIB_DIR)/rmon_monitoring_level.c
	$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(RMONLIB_DIR)/rmon_monitoring_level.c

