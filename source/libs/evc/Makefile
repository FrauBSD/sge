EVCLIB_DIR = $(SDIR)/libs/evc

EVCLIB = libevc$(LIBEXT)

EVCLIB_SRC =   \
               sge_event_client.c

EVCLIB_OBJS = $(EVCLIB_SRC:.c=.o)

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
evclib: $(EVCLIB)

evclib_clean:
		$(RM) $(EVCLIB_OBJS) libevc.a libevc$(SHAREDEXT)

evclib_depend:
		$(DEPEND) -f$(EVCLIB_DIR)/evc_dependencies $(EVCLIB_DIR)/*.c

evclib_messages:
	@echo Creating $@
	@for i in `ls $(EVCLIB_DIR)/*.c`; do \
	   $(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ;\
	done

###############################################################################
# rules to build library
###############################################################################
libevc.a:	$(EVCLIB_OBJS) 
	$(AR) $(ARFLAGS) libevc.a $(EVCLIB_OBJS)
	$(RANLIB) libevc.a

libevc$(SHAREDEXT): $(EVCLIB_OBJS) $(GDILIB) $(SGEOBJLIB) $(SGEOBJDLIB) $(COMMLIB) $(COMMLISTSLIB) $(CULLLIB) $(UTILIB) $(RMONLIB)
	$(SHAREDLD) $(SHARED_LFLAGS) -o libevc$(SHAREDEXT) $(EVCLIB_OBJS) -lgdi -lsgeobj -lsgeobjd -lcomm -lcommlists -lcull -luti -lrmon $(LIBS) -lc

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(EVCLIB_DIR)/evc_dependencies

###############################################################################
# rules to build object codes
###############################################################################
sge_event_client.o:	$(EVCLIB_DIR)/sge_event_client.c
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(EVCLIB_DIR)/sge_event_client.c

