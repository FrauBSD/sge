SPOOLLOADERLIB_DIR = $(SDIR)/libs/spool/loader

SPOOLLOADERLIB = libspoolloader$(LIBEXT)

SPOOLLOADERLIB_SRC = \
         sge_spooling_loader.c

SPOOLLOADERLIB_OBJS = $(SPOOLLOADERLIB_SRC:.c=.o)

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
spoolloaderlib: $(SPOOLLOADERLIB)

spoolloaderlib_clean:
		$(RM) $(SPOOLLOADERLIB_OBJS) libspoolloader.a libspoolloader$(SHAREDEXT)

spoolloaderlib_depend:
		$(DEPEND) -f$(SPOOLLOADERLIB_DIR)/spoolloader_dependencies $(SPOOLLOADERLIB_DIR)/*.c

spoolloaderlib_messages:
	@echo Creating $@
	@for i in `ls $(SPOOLLOADERLIB_DIR)/*.c`; do \
	   $(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ;\
	done

###############################################################################
# rules to build library
###############################################################################
libspoolloader.a:	$(SPOOLLOADERLIB_OBJS) 
	$(AR) $(ARFLAGS) libspoolloader.a $(SPOOLLOADERLIB_OBJS)
	$(RANLIB) libspoolloader.a

libspoolloader$(SHAREDEXT): $(SPOOLLOADERLIB_OBJS) $(SPOOLLIB) $(SGEOBJLIB) $(ALLLISTSLIB) $(CULLLIB) $(UTILIB) $(RMONLIB)
	$(SHAREDLD) $(SHARED_LFLAGS) -o libspoolloader$(SHAREDEXT) $(SPOOLLOADERLIB_OBJS) -lspool -lsgeobj -lsgeobjd -lcull -luti -lrmon $(LIBS) -lc

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(SPOOLLOADERLIB_DIR)/spoolloader_dependencies

###############################################################################
# rules to build object codes
###############################################################################
sge_spooling_loader.o: $(SPOOLLOADERLIB_DIR)/sge_spooling_loader.c 
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(SPOOLLOADERLIB_DIR)/sge_spooling_loader.c

