SPOOLDLIB_DIR = $(SDIR)/libs/spool/dynamic

SPOOLDLIB = libspoold$(LIBEXT)

SPOOLDLIB_SRC = \
         sge_spooling_dynamic.c

SPOOLDLIB_OBJS = $(SPOOLDLIB_SRC:.c=.o)

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
spooldlib: $(SPOOLDLIB)

spooldlib_clean:
		$(RM) $(SPOOLDLIB_OBJS) libspoold.a libspoold$(SHAREDEXT)

spooldlib_depend:
		$(DEPEND) -f$(SPOOLDLIB_DIR)/spoold_dependencies $(SPOOLDLIB_DIR)/*.c

spooldlib_messages:
	@echo Creating $@
	@for i in `ls $(SPOOLDLIB_DIR)/*.c`; do \
	   $(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ;\
	done

###############################################################################
# rules to build library
###############################################################################
libspoold.a:	$(SPOOLDLIB_OBJS) 
	$(AR) $(ARFLAGS) libspoold.a $(SPOOLDLIB_OBJS)
	$(RANLIB) libspoold.a

libspoold$(SHAREDEXT): $(SPOOLDLIB_OBJS) $(SPOOLLIB) $(SGEOBJLIB) $(ALLLISTSLIB) $(CULLLIB) $(UTILIB) $(RMONLIB)
	$(SHAREDLD) $(SHARED_LFLAGS) -o libspoold$(SHAREDEXT) $(SPOOLDLIB_OBJS) -lspool -lsgeobj -lsgeobjd -lcull -luti -lrmon $(LIBS) -lc

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(SPOOLDLIB_DIR)/spoold_dependencies

###############################################################################
# rules to build object codes
###############################################################################
sge_spooling_dynamic.o: $(SPOOLDLIB_DIR)/sge_spooling_dynamic.c 
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(SPOOLDLIB_DIR)/sge_spooling_dynamic.c

#---------------------------------------------------------------------
# test programs
test_sge_spooling_dynamic: test_sge_spooling_dynamic.o $(SPOOLDLIB) $(SPOOLLIB) $(GDILIB) $(SCHEDLIB) $(CULLLIB) $(COMMLIB) $(UTILIB) $(RMONLIB)
	$(CC) $(CFLAGS) -o test_sge_spooling_dynamic $(LFLAGS) test_sge_spooling_dynamic.o $(SPOOLDLIB) $(SPOOLLIB) $(SCHEDLIB) $(GDILIB) $(CULLLIB) $(COMMLIB) $(UTILIB) $(RMONLIB) $(LIBS)

test_sge_spooling_dynamic.o: $(SPOOLDLIB_DIR)/test_sge_spooling_dynamic.c
	$(CC) $(CFLAGS) -c $(SPOOLDLIB_DIR)/test_sge_spooling_dynamic.c

