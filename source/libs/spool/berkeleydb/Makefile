SPOOLBLIB_DIR = $(SDIR)/libs/spool/berkeleydb

SPOOLBLIB = libspoolb$(SPOOLLIBEXT)

SPOOLBLIB_SRC = \
         sge_spooling_berkeleydb.c  \
         sge_bdb.c                  \
         sge_bdb_types.c

SPOOLBLIB_OBJS = $(SPOOLBLIB_SRC:.c=.o)

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
spoolblib: $(SPOOLBLIB)

spoolblib_clean:
		$(RM) $(SPOOLBLIB_OBJS) libspoolb.a libspoolb$(SHAREDEXT)

spoolblib_depend:
		$(DEPEND) -f$(SPOOLBLIB_DIR)/spoolb_dependencies $(SPOOLBLIB_DIR)/*.c

spoolblib_messages:
	@echo Creating $@
	@for i in `ls $(SPOOLBLIB_DIR)/*.c`; do \
	   $(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ;\
	done

###############################################################################
# rules to build library
###############################################################################
libspoolb.a:	$(SPOOLBLIB_OBJS) 
	$(AR) $(ARFLAGS) libspoolb.a $(SPOOLBLIB_OBJS)
	$(RANLIB) libspoolb.a \
   && ../scripts/nonreentrant.sh -a `../dist/util/arch` -w $@

libspoolb$(SHAREDEXT): $(SPOOLBLIB_OBJS) $(SPOOLLIB) $(SCHEDLIB) $(SGEOBJLIB) $(ALLLISTSLIB) $(COMMLIB) $(COMMLISTSLIB) $(CULLLIB) $(UTILIB) $(RMONLIB) $(LCKLIB) 
	$(SHAREDLD) $(SHARED_LFLAGS) -o libspoolb$(SHAREDEXT) $(SPOOLBLIB_OBJS) -lspool -lsched -lsgeobj -lsgeobjd -lcull -lcomm -lcommlists -luti -lrmon -llck -ldb${BDB_LIB_SUFFIX} $(LIBRARY_LIBS) \
   && ../scripts/nonreentrant.sh -a `../dist/util/arch` -w $@

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(SPOOLBLIB_DIR)/spoolb_dependencies

###############################################################################
# rules to build object codes
###############################################################################
sge_spooling_berkeleydb.o: $(SPOOLBLIB_DIR)/sge_spooling_berkeleydb.c 
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(SPOOLBLIB_DIR)/sge_spooling_berkeleydb.c

sge_bdb.o: $(SPOOLBLIB_DIR)/sge_bdb.c 
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(SPOOLBLIB_DIR)/sge_bdb.c

sge_bdb_types.o: $(SPOOLBLIB_DIR)/sge_bdb_types.c 
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(SPOOLBLIB_DIR)/sge_bdb_types.c

