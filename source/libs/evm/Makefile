EVMLIB_DIR = $(SDIR)/libs/evm

EVMLIB = libevm$(LIBEXT)

EVMLIB_SRC = \
               sge_event_master.c \
               sge_queue_event_master.c

EVMLIB_OBJS = $(EVMLIB_SRC:.c=.o)

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
evmlib: $(EVMLIB)

evmlib_clean:
		$(RM) $(EVMLIB_OBJS) libevm.a libevm$(SHAREDEXT)

evmlib_depend:
		$(DEPEND) -f$(EVMLIB_DIR)/evm_dependencies $(EVMLIB_DIR)/*.c

evmlib_messages:
	@echo Creating $@
	@for i in `ls $(EVMLIB_DIR)/*.c`; do \
	   $(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ;\
	done

###############################################################################
# rules to build library
###############################################################################
libevm.a:	$(EVMLIB_OBJS) 
	$(AR) $(ARFLAGS) libevm.a $(EVMLIB_OBJS)
	$(RANLIB) libevm.a

libevm$(SHAREDEXT): $(EVMLIB_OBJS) $(SGEOBJLIB) $(SGEOBJDLIB) $(CULLLIB) $(UTILIB) $(RMONLIB)
	$(SHAREDLD) $(SHARED_LFLAGS) -o libevm$(SHAREDEXT) $(EVMLIB_OBJS) -lsgeobj -lsgeobjd -lcull -luti -lrmon $(LIBS) -lc

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(EVMLIB_DIR)/evm_dependencies

###############################################################################
# rules to build object codes
###############################################################################
sge_event_master.o:	$(EVMLIB_DIR)/sge_event_master.c
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(EVMLIB_DIR)/sge_event_master.c

sge_queue_event_master.o:	$(EVMLIB_DIR)/sge_queue_event_master.c
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(EVMLIB_DIR)/sge_queue_event_master.c

