COSHEPHERD_DIR = $(SDIR)/security/coshepherd

COSHEPHERD_TARGETS = sge_coshepherd

COSHEPHERD_SRC = coshepherd.c

COSHEPHERD_OBJS = $(COSHEPHERD_SRC:.c=.o)

COSHEPHERD_ADD_LIBS = -luti $(WINGRIDLIB) $(COMMLISTSLIB) -llck -lrmon $(DLLIB)

COSHEPHERD_LIB_DEPENDS = $(WINGRIDLIB_DEP) $(UTILIB) $(LCKLIB) $(RMONLIB)

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
coshepherd: $(COSHEPHERD_TARGETS)
	
coshepherd_clean:
	$(RM) $(COSHEPHERD_TARGETS) $(COSHEPHERD_OBJS)

coshepherd_depend:
	$(DEPEND) -f$(COSHEPHERD_DIR)/coshepherd_dependencies $(COSHEPHERD_DIR)/*.c

coshepherd_messages:
	@echo Creating $@
	@for i in `ls $(COSHEPHERD_DIR)/*.c`; do \
		$(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ; \
	done

###############################################################################
# rules to build binaries
###############################################################################
sge_coshepherd: version.o $(COSHEPHERD_OBJS) $(COSHEPHERD_LIB_DEPENDS)
		$(CC) -o $@ version.o $(LFLAGS) $(COSHEPHERD_OBJS) $(COSHEPHERD_ADD_LIBS) $(LIBS)

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(COSHEPHERD_DIR)/coshepherd_dependencies

###############################################################################
# rules to build object codes
###############################################################################
coshepherd.o: 	$(COSHEPHERD_DIR)/coshepherd.c
		$(CC) $(CFLAGS) -c $(COSHEPHERD_DIR)/coshepherd.c
