QMOD_DIR = $(SDIR)/clients/qmod

QMOD_TARGETS = qmod

QMOD_SRC = qmod.c

QMOD_ADD_SRC = sig_handlers.c usage.c sge_options.c

QMOD_OBJS = $(QMOD_SRC:.c=.o)

QMOD_ADD_OBJS = $(QMOD_ADD_SRC:.c=.o)

QMOD_ADD_LIBS = -lgdi -lsgeobj -lsgeobjd $(SECLIB) $(KRBLIB) -lcull -lcomm -lcommlists -luti $(WINGRIDLIB) -llck -lrmon $(DLLIB)

QMOD_LIB_DEPENDS = $(GDILIB) $(SGEOBJLIB) $(SGEOBJDLIB) $(KRBLIBS) $(CULLLIB) $(COMMLIB) $(COMMLISTSLIB) $(UTILIB) $(WINGRIDLIB_DEP) $(LCKLIB) $(RMONLIB) $(TPLIB)

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
qmod_clean:
	$(RM) $(QMOD_TARGETS) $(QMOD_OBJS)

qmod_depend:
		$(DEPEND) -f$(QMOD_DIR)/qmod_dependencies $(QMOD_DIR)/*.c

qmod_messages:
	@echo Creating $@
	@for i in `ls $(QMOD_DIR)/*.c`; do \
		$(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ; \
	done


###############################################################################
# rules to build binaries
###############################################################################
qmod: $(QMOD_OBJS) $(QMOD_ADD_OBJS) $(QMOD_LIB_DEPENDS)
		$(LD_WRAPPER) $(CC) -o $@ $(LFLAGS) $(QMOD_OBJS) $(QMOD_ADD_OBJS) $(QMOD_ADD_LIBS) $(SLIBS) $(LIBS)

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(QMOD_DIR)/qmod_dependencies

###############################################################################
# rules to build object codes
###############################################################################
qmod.o: 	$(QMOD_DIR)/qmod.c
		$(CC) $(CFLAGS) -c $(QMOD_DIR)/qmod.c
