QRDEL_DIR = $(SDIR)/clients/qrdel

QRDEL_TARGETS = qrdel

QRDEL_SRC = qrdel.c 

QRDEL_ADD_SRC = usage.c \
                sge_options.c \
                parse_job_cull.c \
                parse_qsub.c \
                read_defaults.c \
                sig_handlers.c

QRDEL_OBJS = $(QRDEL_SRC:.c=.o)

QRDEL_ADD_OBJS = $(QRDEL_ADD_SRC:.c=.o)

QRDEL_ADD_LIBS = -lgdi -lsgeobj -lsgeobjd $(SECLIB) $(KRBLIB) -lcull -lcomm -lcommlists -luti $(WINGRIDLIB) -llck -lrmon $(DLLIB)

QRDEL_LIB_DEPENDS = $(GDILIB) $(SGEOBJLIB) $(SGEOBJDLIB) $(KRBLIBS) $(CULLLIB) $(COMMLIB) $(COMMLISTSLIB) $(WINGRIDLIB_DEP) $(UTILIB) $(LCKLIB) $(RMONLIB) $(TPLIB)

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
qrdel_clean:
	$(RM) $(QRDEL_TARGETS) $(QRDEL_OBJS)

qrdel_depend:
		$(DEPEND) -f$(QRDEL_DIR)/qrdel_dependencies $(QRDEL_DIR)/*.c

qrdel_messages:
	@echo Creating $@
	@for i in `ls $(QRDEL_DIR)/*.c`; do \
		$(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ; \
	done


###############################################################################
# rules to build binaries
###############################################################################
qrdel: $(QRDEL_OBJS) $(QRDEL_ADD_OBJS) $(QRDEL_LIB_DEPENDS)
		$(LD_WRAPPER) $(CC) -o $@ $(LFLAGS) $(QRDEL_OBJS) $(QRDEL_ADD_OBJS) $(QRDEL_ADD_LIBS) $(SLIBS) $(LIBS)

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(QRDEL_DIR)/qrdel_dependencies

###############################################################################
# rules to build object codes
###############################################################################
qrdel.o: 	$(QRDEL_DIR)/qrdel.c
		$(CC) $(CFLAGS) -c $(QRDEL_DIR)/qrdel.c
