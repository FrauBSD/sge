QSH_DIR = $(SDIR)/clients/qsh

QSH_TARGETS = qsh

QSH_SRC = qsh.c parse_job_qsh.c 

QSH_ADD_SRC = parse_job_cull.c parse_qsub.c \
               sig_handlers.c read_defaults.c \
               show_job.c usage.c sge_options.c \
               sge_mt_init.c sge_client_ijs.c

QSH_OBJS = $(QSH_SRC:.c=.o) sge_ijs_comm.o sge_ijs_threads.o

QSH_ADD_OBJS = $(QSH_ADD_SRC:.c=.o)

QSH_ADD_LIBS = -lgdi -lsgeobj -lsgeobjd $(SECLIB) $(KRBLIB) -lcull -lcomm -lcommlists -luti $(WINGRIDLIB) -llck -lrmon $(DLLIB)

QSH_LIB_DEPENDS = $(GDILIB) $(SGEOBJLIB) $(SGEOBJDLIB) $(CULLLIB) $(COMMLIB) $(COMMLISTSLIB) $(KRBLIBS) $(WINGRIDLIB_DEP) $(UTILIB) $(LCKLIB) $(RMONLIB) $(TPLIB)

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
qsh_clean:
	$(RM) $(QSH_TARGETS) $(QSH_OBJS)

qsh_depend:
		$(DEPEND) -f$(QSH_DIR)/qsh_dependencies $(QSH_DIR)/*.c

qsh_messages:
	@echo Creating $@
	@for i in `ls $(QSH_DIR)/*.c`; do \
		$(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ; \
	done


###############################################################################
# rules to build binaries
###############################################################################
qsh: $(QSH_OBJS) $(QSH_ADD_OBJS) $(QSH_LIB_DEPENDS)
	$(LD_WRAPPER) $(CC) -o $@ $(LFLAGS) $(QSH_OBJS) $(QSH_ADD_OBJS) $(QSH_ADD_LIBS) $(SLIBS) $(LIBS)

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(QSH_DIR)/qsh_dependencies

###############################################################################
# rules to build object codes
###############################################################################
qsh.o:   	$(QSH_DIR)/qsh.c
		$(CC) $(CFLAGS) -c $(QSH_DIR)/qsh.c

parse_job_qsh.o:   	$(QSH_DIR)/parse_job_qsh.c
		$(CC) $(CFLAGS) -c $(QSH_DIR)/parse_job_qsh.c
