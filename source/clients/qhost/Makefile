QHOST_DIR = $(SDIR)/clients/qhost

QHOST_TARGETS = qhost

QHOST_SRC = qhost.c

QHOST_ADD_SRC = \
               qstat_printing.c \
               show_job.c \
               sig_handlers.c \
               usage.c \
               sge_options.c \
               sge_qstat.c \
				   sge_qhost.c \
               sge_cqueue_qstat.c

QHOST_OBJS = $(QHOST_SRC:.c=.o)

QHOST_ADD_OBJS = $(QHOST_ADD_SRC:.c=.o)

QHOST_ADD_LIBS = sge_mt_init.o -lsched -lgdi -lsgeobjd -lsgeobj $(SECLIB) $(KRBLIB) -lcull -lcomm -lcommlists -luti $(WINGRIDLIB) -llck -lrmon $(DLLIB)

QHOST_LIB_DEPENDS = sge_mt_init.o $(GDILIB) $(SCHEDLIB) $(SGEOBJLIB) $(SGEOBJDLIB) $(KRBLIBS) $(CULLLIB) $(COMMLIB) $(COMMLISTSLIB) $(WINGRIDLIB_DEP) $(UTILIB) $(LCKLIB) $(RMONLIB) $(TPLIB)

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
qhost_clean:
	$(RM) $(QHOST_TARGETS) $(QHOST_OBJS)

qhost_depend:
		$(DEPEND) -f$(QHOST_DIR)/qhost_dependencies $(QHOST_DIR)/*.c

qhost_messages:
	@echo Creating $@
	@for i in `ls $(QHOST_DIR)/*.c`; do \
		$(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ; \
	done


###############################################################################
# rules to build binaries
###############################################################################
qhost: $(QHOST_OBJS) $(QHOST_ADD_OBJS) $(QHOST_LIB_DEPENDS)
		$(LD_WRAPPER) $(CC) -o $@ $(LFLAGS) $(QHOST_OBJS) $(QHOST_ADD_OBJS) $(QHOST_ADD_LIBS) $(SLIBS) $(LIBS)

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(QHOST_DIR)/qhost_dependencies

###############################################################################
# rules to build object codes
###############################################################################
qhost.o: 	$(QHOST_DIR)/qhost.c
		$(CC) $(CFLAGS) -c $(QHOST_DIR)/qhost.c
