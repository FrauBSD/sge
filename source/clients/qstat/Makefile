QSTAT_DIR = $(SDIR)/clients/qstat

QSTAT_TARGETS = qstat

QSTAT_SRC = qstat.c

QSTAT_ADD_SRC = \
               parse_job_cull.c \
               parse_qsub.c \
               read_defaults.c \
               qstat_printing.c \
               sge_cqueue_qstat.c \
               show_job.c \
               sig_handlers.c \
               usage.c sge_options.c \
               sge_mt_init.c \
               qstat_cmdline.c \
               qstat_xml.c \
               sge_qstat.c

QSTAT_OBJS = $(QSTAT_SRC:.c=.o)

QSTAT_ADD_OBJS = $(QSTAT_ADD_SRC:.c=.o)

QSTAT_ADD_LIBS = -lsched -levc -lgdi -lsgeobj -lsgeobjd $(SECLIB) $(KRBLIB) -lcull -lcomm -lcommlists -luti $(WINGRIDLIB) -llck -lrmon $(DLLIB)

QSTAT_LIB_DEPENDS = $(SCHEDLIB) $(EVCLIB) $(GDILIB) $(SGEOBJLIB) $(SGEOBJDLIB) \
                    $(KRBLIBS) $(CULLLIB) $(COMMLIB) $(COMMLISTSLIB) \
                    $(WINGRIDLIB_DEP) $(UTILIB) $(LCKLIB) $(RMONLIB) \
                    $(TPLIB)

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
qstat_clean:
	$(RM) $(QSTAT_TARGETS) $(QSTAT_OBJS) $(QSTAT_ADD_OBJS)

qstat_depend:
	$(DEPEND) -f$(QSTAT_DIR)/qstat_dependencies $(QSTAT_DIR)/*.c

qstat_messages:
	@echo Creating $@
	@for i in `ls $(QSTAT_DIR)/*.c`; do \
		$(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ; \
	done


###############################################################################
# rules to build binaries
###############################################################################
qstat: $(QSTAT_OBJS) $(QSTAT_ADD_OBJS) $(QSTAT_LIB_DEPENDS) 
		$(LD_WRAPPER) $(CC) -o $@ $(LFLAGS) $(QSTAT_OBJS) $(QSTAT_ADD_OBJS) $(QSTAT_ADD_LIBS) $(SLIBS) $(LIBS)

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(QSTAT_DIR)/qstat_dependencies

###############################################################################
# rules to build object codes
###############################################################################
qstat.o: 	$(QSTAT_DIR)/qstat.c
		$(CC) $(CFLAGS) -c $(QSTAT_DIR)/qstat.c
      
qstat_cmdline.o: 	$(QSTAT_DIR)/qstat_cmdline.c
		$(CC) $(CFLAGS) -c $(QSTAT_DIR)/qstat_cmdline.c

qstat_xml.o: 	$(QSTAT_DIR)/qstat_xml.c
		$(CC) $(CFLAGS) -c $(QSTAT_DIR)/qstat_xml.c
