SHOWQ_DIR = $(SDIR)/clients/showq

SHOWQ_TARGETS = showq

SHOWQ_SRC = showq.c

SHOWQ_ADD_SRC = \
               parse_job_cull.c \
               parse_qsub.c \
               showq_cmdline_tacc.c \
               showq_support.c \
               sig_handlers.c

SHOWQ_OBJS = $(SHOWQ_SRC:.c=.o)

SHOWQ_ADD_OBJS = $(SHOWQ_ADD_SRC:.c=.o)

SHOWQ_ADD_LIBS = -lsched -levc -lgdi -lsgeobj -lsgeobjd $(SECLIB) $(KRBLIB) -lcull -lcomm -lcommlists -luti $(WINGRIDLIB) -llck -lrmon $(DLLIB)

SHOWQ_LIB_DEPENDS = $(SCHEDLIB) $(EVCLIB) $(GDILIB) $(SGEOBJLIB) $(SGEOBJDLIB) \
                    $(SECLIBS) $(KRBLIBS) \
	                 $(CULLLIB) $(COMMLIB) $(COMMLISTSLIB) $(WINGRIDLIB_DEP) \
                    $(UTILIB) $(LCKLIB) $(RMONLIB) \
                    $(TPLIB)

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
showq_clean:
	$(RM) $(SHOWQ_TARGETS) $(SHOWQ_OBJS) $(SHOWQ_ADD_OBJS)

showq_depend:
	$(DEPEND) -f$(SHOWQ_DIR)/showq_dependencies $(SHOWQ_DIR)/*.c

showq_messages:
	@echo Creating $@
	@for i in `ls $(SHOWQ_DIR)/*.c`; do \
		$(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ; \
	done


###############################################################################
# rules to build binaries
###############################################################################
showq: $(SHOWQ_OBJS) $(SHOWQ_ADD_OBJS) $(SHOWQ_LIB_DEPENDS) 
		$(LD_WRAPPER) $(CC) -o $@ $(LFLAGS) $(SHOWQ_OBJS) $(SHOWQ_ADD_OBJS) $(SHOWQ_ADD_LIBS) $(SLIBS) $(LIBS)

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(SHOWQ_DIR)/showq_dependencies

###############################################################################
# rules to build object codes
###############################################################################
showq.o: 	$(SHOWQ_DIR)/showq.c 
	$(CC) $(CFLAGS) -c $(SHOWQ_DIR)/showq.c
      
showq_cmdline_tacc.o: 	$(SHOWQ_DIR)/showq_cmdline_tacc.c
	$(CC) $(CFLAGS) -I../clients/qstat -c $(SHOWQ_DIR)/showq_cmdline_tacc.c

showq_support.o: 	$(SHOWQ_DIR)/showq_support.c
	$(CC) $(CFLAGS) -c $(SHOWQ_DIR)/showq_support.c
