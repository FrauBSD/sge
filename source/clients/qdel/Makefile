QDEL_DIR = $(SDIR)/clients/qdel

QDEL_TARGETS = qdel

QDEL_SRC = qdel.c 

QDEL_ADD_SRC = usage.c sge_options.c

QDEL_OBJS = $(QDEL_SRC:.c=.o)

QDEL_ADD_OBJS = $(QDEL_ADD_SRC:.c=.o)

QDEL_ADD_LIBS = -lgdi -lsgeobj -lsgeobjd $(SECLIB) $(KRBLIB) -lcull -lcomm -lcommlists -luti $(WINGRIDLIB) -llck -lrmon $(DLLIB)

QDEL_LIB_DEPENDS = $(GDILIB) $(SGEOBJLIB) $(SGEOBJDLIB) $(KRBLIBS) $(CULLLIB) $(COMMLIB) $(COMMLISTSLIB) $(WINGRIDLIB_DEP) $(UTILIB) $(LCKLIB) $(RMONLIB) $(TPLIB)

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
qdel_clean:
	$(RM) $(QDEL_TARGETS) $(QDEL_OBJS)

qdel_depend:
		$(DEPEND) -f$(QDEL_DIR)/qdel_dependencies $(QDEL_DIR)/*.c

qdel_messages:
	@echo Creating $@
	@for i in `ls $(QDEL_DIR)/*.c`; do \
		$(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ; \
	done


###############################################################################
# rules to build binaries
###############################################################################
qdel: $(QDEL_OBJS) $(QDEL_ADD_OBJS) $(QDEL_LIB_DEPENDS)
		$(LD_WRAPPER) $(CC) -o $@ $(LFLAGS) $(QDEL_OBJS) $(QDEL_ADD_OBJS) $(QDEL_ADD_LIBS) $(SLIBS) $(LIBS)

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(QDEL_DIR)/qdel_dependencies

###############################################################################
# rules to build object codes
###############################################################################
qdel.o: 	$(QDEL_DIR)/qdel.c
		$(CC) $(CFLAGS) -c $(QDEL_DIR)/qdel.c
