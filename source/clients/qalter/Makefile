QALTER_DIR = $(SDIR)/clients/qalter

QALTER_TARGETS = qalter

QALTER_SRC = qalter.c 

QALTER_ADD_SRC = sig_handlers.c parse_qsub.c \
               show_job.c parse_job_cull.c usage.c sge_options.c read_defaults.c

QALTER_OBJS = $(QALTER_SRC:.c=.o) 

QALTER_ADD_OBJS = $(QALTER_ADD_SRC:.c=.o)
               
QALTER_ADD_LIBS = -lgdi -lsgeobj -lsgeobjd $(SECLIB) $(KRBLIB) -lcull -lcomm -lcommlists -luti $(WINGRIDLIB) -llck -lrmon $(DLLIB)

QALTER_LIB_DEPENDS = $(GDILIB) $(SGEOBJLIB) $(SGEOBJDLIB) $(KRBLIBS) $(CULLLIB) $(COMMLIB) $(COMMLISTSLIB) $(WINGRIDLIB_DEP) $(UTILIB) $(LCKLIB) $(RMONLIB) $(TPLIB)

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
qalter_clean:
	$(RM) $(QALTER_TARGETS) $(QALTER_OBJS)

qalter_depend:
		$(DEPEND) -f$(QALTER_DIR)/qalter_dependencies $(QALTER_DIR)/*.c

qalter_messages:
	@echo Creating $@
	@for i in `ls $(QALTER_DIR)/*.c`; do \
		$(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ; \
	done


###############################################################################
# rules to build binaries
###############################################################################
qalter: $(QALTER_OBJS) $(QALTER_ADD_OBJS) $(QALTER_LIB_DEPENDS)
		$(LD_WRAPPER) $(CC) -o $@ $(LFLAGS) $(QALTER_OBJS) $(QALTER_ADD_OBJS) $(QALTER_ADD_LIBS) $(SLIBS) $(LIBS)

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(QALTER_DIR)/qalter_dependencies

###############################################################################
# rules to build object codes
###############################################################################
qalter.o: 	$(QALTER_DIR)/qalter.c
		$(CC) $(CFLAGS) -c $(QALTER_DIR)/qalter.c

