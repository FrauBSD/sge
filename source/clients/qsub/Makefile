QSUB_DIR = $(SDIR)/clients/qsub

QSUB_TARGETS = qsub

QSUB_SRC = qsub.c

QSUB_ADD_SRC = parse_job_cull.c parse_qsub.c \
               sig_handlers.c read_defaults.c \
               show_job.c usage.c sge_options.c \
               sge_mt_init.c

QSUB_OBJS = $(QSUB_SRC:.c=.o)

QSUB_ADD_OBJS = $(QSUB_ADD_SRC:.c=.o) japi.o

QSUB_ADD_LIBS = -levc -lgdi -lsgeobj -lsgeobjd  \
                -lcull -lcomm -lcommlists -luti $(WINGRIDLIB) -llck -lrmon \
                $(SECLIB) $(KRBLIB) $(DLLIB) 

QSUB_LIB_DEPENDS = $(EVCLIB) $(GDILIB) $(SGEOBJLIB) $(SGEOBJDLIB) \
                   $(KRBLIBS) $(CULLLIB) $(COMMLIB) $(COMMLISTSLIB) \
                   $(WINGRIDLIB_DEP) $(LCKLIB) $(UTILIB) $(RMONLIB) \
                   $(TPLIB)

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
qsub_clean:
	$(RM) $(QSUB_TARGETS) $(QSUB_OBJS)

qsub_depend:
		$(DEPEND) -f$(QSUB_DIR)/qsub_dependencies $(QSUB_DIR)/*.c

qsub_messages:
	@echo Creating $@
	@for i in `ls $(QSUB_DIR)/*.c`; do \
		$(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ; \
	done


###############################################################################
# rules to build binaries
###############################################################################
qsub: $(QSUB_OBJS) $(QSUB_ADD_OBJS) $(QSUB_LIB_DEPENDS)
		$(LD_WRAPPER) $(CC) -o $@ $(LFLAGS) $(QSUB_OBJS) $(QSUB_ADD_OBJS) $(QSUB_ADD_LIBS) $(SLIBS) $(LIBS)

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(QSUB_DIR)/qsub_dependencies

###############################################################################
# rules to build object codes
###############################################################################
qsub.o: 	$(QSUB_DIR)/qsub.c
		$(CC) $(CFLAGS) -c $(QSUB_DIR)/qsub.c
