<service_bundle type='manifest' name='sge:execd'>

<service
        name='application/sge/execd'
        type='service'
        version='1'>

        <dependency name='fs-autofs'
                grouping='optional_all'
                restart_on='none'
                type='service'>
                <service_fmri value='svc:/system/filesystem/autofs' />
        </dependency>

        <dependency name='network'
                grouping='require_all'
                restart_on='none'
                type='service'>
                <service_fmri value='svc:/milestone/network' />
        </dependency>
        
        <instance name='@@@CLUSTER_NAME@@@' enabled='false'>     
           <exec_method
                type='method'
                name='start'
                exec='@@@SGE_ROOT@@@/@@@SGE_CELL@@@/common/sgeexecd %m'
                timeout_seconds='30'>
                <method_context>
                   <method_environment>
                      <envvar name='SGE_ROOT' value='@@@SGE_ROOT@@@'/>
                      <envvar name='SGE_CELL' value='@@@SGE_CELL@@@'/>
                      <envvar name='SGE_QMASTER_PORT' value='@@@SGE_QMASTER_PORT@@@'/>
                      <envvar name='SGE_EXECD_PORT' value='@@@SGE_EXECD_PORT@@@'/>
                   </method_environment>
                </method_context>
           </exec_method>

           <!-- TODO: Timeout 90secs now needed -->
           <exec_method
                type='method'
                name='stop'
                exec=':kill'
                timeout_seconds='300'>
           </exec_method>

           <property_group name='startd' type='framework'>
                <propval name='ignore_error' type='astring' value='core,signal' />
           </property_group>
        </instance>
        
        <stability value='Unstable' />

        <template>
                <common_name>
                        <loctext xml:lang='C'>
                        Sun Grid Engine - Execd service
                        </loctext>
                </common_name>
                <documentation>
                        <manpage title='sge_execd' section='8M' manpath='@@@SGE_ROOT@@@/man' />
                </documentation>
        </template>
</service>

</service_bundle>
